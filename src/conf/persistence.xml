<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="RubbleWebServerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.edu.ifc.fraiburgo.rubble.model.Status</class>
    <class>br.edu.ifc.fraiburgo.rubble.model.Cidade</class>
    <class>br.edu.ifc.fraiburgo.rubble.model.Comentario</class>
    <class>br.edu.ifc.fraiburgo.rubble.model.RedeSocial</class>
    <class>br.edu.ifc.fraiburgo.rubble.model.Usuario</class>
    <class>br.edu.ifc.fraiburgo.rubble.model.Estado</class>
    <class>br.edu.ifc.fraiburgo.rubble.model.Postagem</class>
    <class>br.edu.ifc.fraiburgo.rubble.model.Conquista</class>
    <class>br.edu.ifc.fraiburgo.rubble.model.Marcacao</class>
    <class>br.edu.ifc.fraiburgo.rubble.model.Bugreport</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/rubble"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
